<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.GymTracker" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary -->
        <item name="colorPrimary">@color/green_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary -->
        <item name="colorSecondary">@color/lime_accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Background / Surface -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/on_surface_dark</item>

        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@color/on_surface_dark</item>

        <!-- Status bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/green_primary_dark</item>

    </style>

</resources>
